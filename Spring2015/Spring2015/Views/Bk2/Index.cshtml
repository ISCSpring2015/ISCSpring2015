                    @Html.DisplayFor(modelItem => item.BKLevel1.Name)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BKLevel2ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BKLevel2ID }) |
