<h2>List BKLevel2</h2>
<script type="text/javascript">
    $(document).ready(function () {
        $("input[type=radio]").click(function () {
            var $this = $(this);
            $this.parents("group:first").find("input[type=radio]").not($this).prop("checked", false);
            $(":hidden[name='hdn_selected_BKLevel2']").val() = $('input[name=RdBKLevel2]:checked').val();
        });
        $(":radio").click(function () {
            var inputValue = $this.val();
            $(":hidden[name='hdn_selected_BKLevel2']").val() = inputValue;
        });
    });
</script>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>

        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.NumberLevel1)
            </th>*@
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.NumberLevel2)
        </th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.BKLevel1.Name)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="radio" name="RdBKLevel2" id="@item.BKLevel2ID" value=@item.BKLevel2ID />
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.NumberLevel1)
                </td>*@
            <td style="padding-left:45px">
