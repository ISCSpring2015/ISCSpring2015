@model IEnumerable<Spring2015.SkillSet>

@{
    //ViewBag.Title = "Index";
}

<h2>List SkillSet</h2>

<script type="text/javascript">

    function getValue() {
        // alert();
        // var skillcurr = $("form:radio:checked").val();
        var radioanswer = 0;
        if ($('input[name=RdSkillset]:checked').val() != null) {
            radioanswer = $('input[name=RdSkillset]:checked').val();
        }
        //var selectedId = $('#hdnSelectedId').val();
        // alert(radioanswer);
        if (radioanswer > 0) {
            window.location.href = "/Skill/Index/" + radioanswer;
        }
    }
</script>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.skillSetNum1)
        </th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        @*<th>
            @Html.DisplayNameFor(model => model.Curriculum.Name)
        </th>*@
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count(); i++)
{

    <tr>

        <td>
            @{if (Convert.ToInt32(TempData["SkillsetID"]) == Model.ElementAt(i).SkillsetID || (i == 0 && TempData["SkillsetID"] == null))
{
    <input type="radio" name="RdSkillset" id="@Model.ElementAt(i).SkillsetID" value=@Model.ElementAt(i).SkillsetID checked="checked" />
}
              else
              {
                <input type="radio" name="RdSkillset" id="@Model.ElementAt(i).SkillsetID" value=@Model.ElementAt(i).SkillsetID />
              }
}

        
        <td style="padding-left:45px">
            @Html.DisplayFor(modelItem => Model.ElementAt(i).skillSetNum1)
        </td>
        <td style="padding-left:30px">
            @Html.DisplayFor(modelItem => Model.ElementAt(i).ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)
        </td>

        @*<td>
                @Html.DisplayFor(modelItem => item.Curriculum.Name)
            </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(i).SkillsetID }) |
            @Html.ActionLink("Details", "Details", new { id = Model.ElementAt(i).SkillsetID }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(i).SkillsetID })
        </td>
    </tr>
}

</table>
@Html.Hidden("hdn_selected_SkillSet", 0)

<div style="text-align: center;">

    <input id="btnSkillSet" type="button" name="btnSkillSet" value="Skill" class="btn btn-primary" onclick="getValue();" />
     @*@Html.ActionLink("Skill", "Index", new { id = 1 }, new { @class = "btn btn-primary", @type = "button" })*@
</div>