@model IEnumerable<Spring2015.SkillSet>

@{
    //ViewBag.Title = "Index";
}

<h2>List SkillSet</h2>

<script type="text/javascript">

    function getValue() {
        // alert();
        // var skillcurr = $("form:radio:checked").val();
        var radioanswer = 0;
        if ($('input[name=RdSkillset]:checked').val() != null) {
            radioanswer = $('input[name=RdSkillset]:checked').val();
        }
        //var selectedId = $('#hdnSelectedId').val();
        // alert(radioanswer);
        if (radioanswer > 0) {
            window.location.href = "/Skill/Index/" + radioanswer;
        }
    }
</script>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.skillSetNum1)
        </th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        @*<th>
            @Html.DisplayNameFor(model => model.Curriculum.Name)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="radio" name="RdSkillset" id="@item.SkillsetID" value=@item.SkillsetID />
        </td>
        <td style="padding-left:45px">
            @Html.DisplayFor(modelItem => item.skillSetNum1)
        </td>
        <td style="padding-left:30px">
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        @*<td>
            @Html.DisplayFor(modelItem => item.Curriculum.Name)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SkillsetID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SkillsetID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SkillsetID })
        </td>
    </tr>
}

</table>
@Html.Hidden("hdn_selected_SkillSet", 0)

<div style="text-align: center;">

    <input id="btnSkillSet" type="button" name="btnSkillSet" value="Skill" class="btn btn-primary" onclick="getValue();" />
