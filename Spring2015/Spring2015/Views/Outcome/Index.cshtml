@model IEnumerable<Spring2015.Outcome>

@{
    ViewBag.Title = "Index";
}

<h2>List Outcome </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th style="width:100px">
            @Html.DisplayNameFor(model => model.OutcomeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepthOfKnowledge)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>*@
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count(); i++)
{

    <tr>

        <td>
            @{if (Convert.ToInt32(TempData["OutcomeID "]) == Model.ElementAt(i).OutcomeID || (i == 0 && TempData["OutcomeID "] == null))
{
    <input type="radio" name="RdOutcome" id="@Model.ElementAt(i).OutcomeID D" value=@Model.ElementAt(i).OutcomeID checked="checked" />
}
              else
              {
                <input type="radio" name="RdOutcome" id="@Model.ElementAt(i).OutcomeID " value=@Model.ElementAt(i).OutcomeID />
              }
}

        </td>
        <td style="padding-left:45px">
            @Html.DisplayFor(modelItem => Model.ElementAt(i).SectionNumber) . @Html.DisplayFor(modelItem => Model.ElementAt(i).CourseNumber) . @Html.DisplayFor(modelItem => Model.ElementAt(i).OutcomeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(i).ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(i).DepthOfKnowledge)
        </td>
        @*<td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(i).OutcomeID }) |
            @Html.ActionLink("Details", "Details", new { id = Model.ElementAt(i).OutcomeID }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(i).OutcomeID })
        </td>
    </tr>
}

</table>
